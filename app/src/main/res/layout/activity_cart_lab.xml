<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartLabActivity"
    android:background="@drawable/bg7">

    <LinearLayout
        android:id="@+id/formContainer"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/glass_background"
        android:elevation="10dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <!-- App Title -->
        <TextView
            android:id="@+id/labtest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="cursive"
            android:text="Lab Test"
            android:textColor="#EBEAEA"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Total Cost -->

        <!-- Full Name Field -->
        <TextView
            android:id="@+id/totalCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="Total Cost: $0.00"
            android:textColor="#EBEAEA"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lvdata"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/glass_background"
            android:divider="@android:color/transparent"
            android:dividerHeight="16dp"
            android:padding="8dp"
            android:scrollbars="none" />


        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- Select Date -->
        <TextView
            android:id="@+id/selectDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="90dp"
            android:text="Select Date"
            android:textColor="#EBEAEA"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Spacer -->
        <!-- Select Time -->
        <Button
            android:id="@+id/bookAppointmentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="90dp"
            android:background="@drawable/rounded_button"
            android:padding="12dp"
            android:text="00/00/0000"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/selectDate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="-80dp"
            android:text="Select Time"
            android:textColor="#EBEAEA"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bookAppointmentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="-90dp"
            android:background="@drawable/rounded_button"
            android:padding="12dp"
            android:text="00:00"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- Book Appointment Button -->
        <!-- Spacer -->
        <Button
            android:id="@+id/checkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-30dp"
            android:background="@drawable/rounded_button"
            android:padding="12dp"
            android:text="CHECKOUT"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:padding="12dp"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="3dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
